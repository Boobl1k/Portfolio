@model RegisterViewModel

@{
    ViewBag.Title = "Sign up";
    Layout = "_Layout";
}

<h2>Sign up</h2>
<form method="post" asp-controller="Auth" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    @Html.EditorForModel()
    <div>
        <input type="submit" value="Sign up"/>
    </div>
</form>