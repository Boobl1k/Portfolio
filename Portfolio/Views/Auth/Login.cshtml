@model LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<h2>Login</h2>
@using (Html.BeginForm("Login", "Auth", FormMethod.Post))
{
    <div asp-validation-summary="ModelOnly"></div>
    @Html.EditorForModel()
    <div>
        <input type="submit" value="Sign in"/>
    </div>
}